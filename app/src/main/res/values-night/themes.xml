<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>

        <!-- Theme Colors -->
        <item name="colorAccentedSurface">@color/color_primary_light</item>
        <item name="colorIcon">@color/light_gray</item>
        <item name="colorDivider">@color/color_divider_dark</item>
        <item name="colorBackground">@android:color/white</item>
        <item name="colorMessage">@color/color_gray_dark</item>
        <item name="colorArchiveIcon">@color/light_gray</item>
        <item name="colorCounterBackground">@color/color_bg_counter_light</item>
        <item name="colorIndicatorBackground">@color/color_indicator_light</item>
        <item name="colorIconDone">@color/color_primary</item>
        <item name="colorToolbar">@color/color_primary</item>
        <item name="colorSnackbarBackground">@color/color_primary</item>
        <item name="colorSnackbarTextColor">@android:color/white</item>
        <item name="colorSwipeBackground">@color/color_primary_dark</item>
        <item name="colorChipBackground">@color/color_primary_light</item>
        <item name="colorChipButtonBackground" >@android:color/white</item>
        <item name="colorIndicatorBorder">@android:color/white</item>
        <item name="colorDarkBackground">@color/color_background_dark_light</item>
        <item name="colorTextDesc">@color/color_text_desc_light</item>
    </style>

</resources>