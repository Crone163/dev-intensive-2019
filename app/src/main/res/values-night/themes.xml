<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent_night</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>

        <!-- Theme Colors -->
        <item name="colorAccentedSurface">@color/color_divider_light</item>
        <item name="colorIcon">@android:color/white</item>
        <item name="colorDivider">@color/color_divider_dark</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="colorMessage">@color/gray</item>
        <item name="colorArchiveIcon">@color/color_gray_dark</item>
        <item name="colorCounterBackground">@color/color_gray_dark</item>
        <item name="colorIndicatorBackground">@color/color_accent_night</item>
        <item name="colorIconDone">@color/color_accent_night</item>
        <item name="colorToolbar">@color/color_toolbar_night</item>
        <item name="colorSnackbarBackground">@android:color/white</item>
        <item name="colorSnackbarTextColor">@color/color_background_dark_night</item>
        <item name="colorSwipeBackground">@color/color_accent_night</item>
        <item name="colorChipBackground">@color/color_background_night</item>
        <item name="colorChipButtonBackground" >@color/gray</item>
        <item name="colorBackground">@color/color_background_night</item>
        <item name="colorIndicatorBorder">@android:color/white</item>
        <item name="colorDarkBackground">@color/color_background_dark_night</item>

    </style>

</resources>